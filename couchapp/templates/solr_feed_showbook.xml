<?xml version="1.0" encoding="UTF-8"?>
<add>
    <doc>
        <field name="sbid">{{sbid}}</field>
        <field name="shortname">{{shortname}}</field>
        <field name="title">{{title}}</field>
        <field name="isbn">{{isbn}}</field>
        <field name="author">{{authors}}</field>
        {{#chapters_list}}
            <field name="chaptertitle">{{title}}</field>
        {{/chapters_list}}
        <field name="publisher">{{publisher}}</field>
        <field name="language">{{language}}</field>
        <field name="year">{{year}}</field>
        <field name="synopsis">{{synopsis}}</field>
        {{#format}}
            <field name="format">{{type}}</field>
        {{/format}}
        <field name="type">{{type}}</field>
        <field name="is_public">{{is_public}}</field>
    </doc>
</add>

